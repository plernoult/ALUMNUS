<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to users_path, class: "navbar-brand" do %>
    <%= image_tag "logo_alumnus_white.png",id: "logo" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <% name = "#{current_user.first_name} #{current_user.last_name}" %>
          <%= link_to name, user_profile_path, class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", chatrooms_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <div class="profile-picture">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My favorites", user_favorites_path(:user_id), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
